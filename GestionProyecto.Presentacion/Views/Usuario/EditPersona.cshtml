
@{
    ViewData["Title"] = "Editar Perfil";
}
<div class="text-center">
    <div>
        <form method="post">
            <img class="mb-4" src="~/images/usuario.svg" alt="" width="72" height="57">
            <h1 class="h3 mb-3 fw-normal">Editar Perfil</h1>

            <div class="form-floating">
                <input type="text" class="form-control" id="Nombre" name="Nombre" placeholder="escriba su nombre...">
                <label for="Nombre">Nombre</label>
            </div>
            <div class="form-floating">
                <input type="text" class="form-control" id="Apellido" name="Apellido" placeholder="escriba su apellido...">
                <label for="Apellido">Apellido</label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="radio" name="Sexo" id="Sexo" value="true" checked>
                <label class="form-check-label" for="Sexo">
                    Masculino
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="Sexo" id="Sexo" value="false">
                <label class="form-check-label" for="Sexo">
                    Femenino
                </label>
            </div>
            <div class="input-group">
                <span class="input-group-text">Direccion</span>
                <textarea class="form-control" id="Direccion" name="Direccion" aria-label="Direccion"></textarea>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Registrar</button>
            <p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p>
        </form>
    </div>
</div>