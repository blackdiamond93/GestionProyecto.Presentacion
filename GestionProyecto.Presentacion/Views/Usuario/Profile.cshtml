@{
    ViewData["Title"] = "Profile Page";
}
<div class="row">
    <div class="col-3">
        <section>
            <div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px;">
                <a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                    <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap" /></svg>
                    <span class="fs-4">Menu</span>
                </a>
                <hr>
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link link-dark" aria-current="page">
                            <svg class="bi me-2" width="16" height="16"></svg>
                            Home
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Admin" asp-action="Index" class="nav-link link-dark">
                            <svg class="bi me-2" width="16" height="16"></svg>
                            Dashboard
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Usuario" asp-action="EditPersona" class="nav-link link-dark">
                            <svg class="bi me-2" width="16" height="16"></svg>
                            Editar perfil
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Usuario" asp-action="ChangePass" class="nav-link link-dark">
                            <svg class="bi me-2" width="16" height="16"><use xlink:href="#grid" /></svg>
                            Cambio de Contraseña
                        </a>
                    </li>
                </ul>
                <hr>

            </div>
        </section>

    </div>


    <div class="col-auto">
        <section class="">
            <div class="justify-content-center">
                <div class="col mb-5">
                    <div class="card text-center" style="width: 20rem;">
                        <img src="~/images//usuario.svg" class="card-img-top" alt="...">
                        <div class="card-body">
                            @{
                                if (ViewBag.User != null)
                                {
                                    <h5 class="card-title">@ViewBag.User.Nombre</h5>
                                    <div class="card" style="width: 18rem;">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item">@ViewBag.User.Apellido</li>
                                            <li class="list-group-item">@ViewBag.User.usuario</li>
                                            @{
                                                if (ViewBag.User.Sexo)
                                                {
                                                    <li class="list-group-item">Masculinno</li>
                                                }
                                                else
                                                {
                                                    <li class="list-group-item">Femenino</li>
                                                }
                                            }
                                            <li class="list-group-item">@ViewBag.User.Direcccion</li>
                                        </ul>


                                    </div>
                                }


                            }
                        </div>
                    </div>
                </div>

            </div>
        </section>
    </div>



</div>